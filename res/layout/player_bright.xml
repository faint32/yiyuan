<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_bright_layout"
    android:layout_width="300.0dip"
    android:layout_height="70.0dip"
    android:background="@drawable/corner_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip" >

        <ImageView
            android:id="@+id/brightness_adjust_videoplayer_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_brightness_adjust_videoplayer_dark" />

        <ImageView
            android:id="@+id/brightness_adjust_videoplayer_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="2.0dip"
            android:src="@drawable/ic_brightness_adjust_videoplayer_light" />

        <SeekBar
            android:id="@+id/seekbar_bright"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/brightness_adjust_videoplayer_light"
            android:layout_toRightOf="@id/brightness_adjust_videoplayer_dark"
            android:maxHeight="6.0dip"
            android:minHeight="6.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:progressDrawable="@drawable/seekbar_progress_style"
            android:thumb="@drawable/common_brightness_videoplayer" />
    </RelativeLayout>

</RelativeLayout>