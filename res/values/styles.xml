<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="menuleft_text_shadow">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
    </style>

    <style name="line_view_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menuleft_divider_size</item>
        <item name="android:background">@color/linedeepcolor</item>
    </style>

    <style name="line_view_width_2" parent="line_view_width">
        <item name="android:background">@color/linelightcolor</item>
    </style>

    <style name="line_view_height">
        <item name="android:layout_width">@dimen/menuleft_divider_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/linedeepcolor</item>
    </style>

    <style name="line_view_height_2" parent="line_view_height">
        <item name="android:background">@color/linelightcolor</item>
    </style>

</resources>